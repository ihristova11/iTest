@using iTest.Web.Areas.Users.Models.Dashboard
@model UserDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <ul class="nav nav-tabs">

                    @if (@Model.Categories.Count() != 0)
                    {
                        foreach (var category in Model.Categories)
                        {
                            if (category.Name == "Java")
                            {
                                <li>
                                    <a fade active in href="#@category.Id" data-toggle="tab">@category.Name</a>
                                </li>
                            }
                            else
                            {
                                <li>
                                    <a href="#@category.Id" data-toggle="tab">@category.Name</a>
                                </li>
                            }
                        }
                    }
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-pane fade in active" id="tab1default">
                    @foreach (var category in Model.Categories)
                    {
                        <div class="tab-pane" id="1">
                            <table class="table table-striped table-bordered tests" style="width:100%" data-page-length='10'>
                                <div class="tab-content">
                                    @if (@Model.Tests.Count() != 0)
                                    {
                                        foreach (var test in Model.Tests)
                                        {
                                            <div class="row">
                                                <div class="tab-pane container col-md-7 active" id=@test.Name>
                                                    <label>@test.Name</label>
                                                </div>
                                                <div class="col-md-5">
                                                    <a asp-route="/Users/UserTests/Details/@test.Id" method="get" class="btn btn-sm pull-right">Start</a>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </table>
                        </div>
                        <div class="tab-pane fade" id="tab2default">
                            <table style="width: 100%" class="table table-striped custab" data-page-length='10'>
                                <div class="tab-content">
                                    @if (@Model.Tests.Count() != 0)
                                    {
                                        foreach (var test in Model.Tests)
                                        {
                                            <div class="row">
                                                <div class="tab-pane container col-md-7 active" id=@test.Name>
                                                    <label>@test.Name</label>
                                                </div>
                                                <div class="col-md-5">
                                                    <a asp-route="/Users/UserTests/Details/@test.Id" method="get" class="btn btn-sm pull-right">Start</a>
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

