@model iTest.Web.Areas.Admin.Models.Dashboard.IndexViewModel


@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>
<div class="row">
    <div class="col-md-12">
        <div class="panel with-nav-tabs panel-default">
            <div class="panel-heading">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#tab1default" data-toggle="tab">Your Test List</a></li>
                    <li><a href="#tab2default" data-toggle="tab">Test Results</a></li>
                    <a asp-area="Admin" asp-controller="ManageTest" asp-action="Create" class="btn btn-primary pull-right">New Test</a>
                </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1default">
                        <table class="table table-striped table-bordered tests" style="width:100%" data-page-length='10'>
                            <thead>
                                <tr>
                                    <th>Test Name</th>
                                    <th>Category</th>
                                    <th>Status</th>
                                    <th class="text-justify">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var test in Model.Tests)
                                {
                                    <tr id="@test.Id">
                                        <td>@test.TestName</td>
                                        <td>@test.CategoryName</td>
                                        <td>@test.Status</td>
                                        <td class="text-justify">
                                            <div class="text-center">
                                                @if (test.Status == "Published")
                                                {
                                                    <a class="btn btn-primary" disabled="disabled">Publish</a>
                                                    <a class="btn btn-primary" id="@test.Id" disabled="disabled">Edit</a>
                                                    <a class="btn btn-primary" id="@test.Id" asp-action="Disable" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@test.Id" name="disable">Disable</a>
                                                }
                                                else if (test.Status == "Draft")
                                                {
                                                    <a class="btn btn-primary" id="@test.Id" asp-action="Publish" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@test.Id" name="publish">Publish</a>
                                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="ManageTest" asp-area="Admin" asp-route-id="@test.Id">Edit</a>
                                                    <a class="btn btn-primary" asp-action="Delete" asp-controller="Dashboard" asp-area="Admin" asp-route-id="@test.Id" name="delete">Delete</a>
                                                }

                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="tab-pane fade" id="tab2default">
                        <table style="width:100%" class="table table-striped custab results" data-page-length='10'>
                            <thead>
                                <tr>
                                    <th>Test Name</th>
                                    <th>User Name</th>
                                    <th>Category</th>
                                    <th>Requested Time</th>
                                    <th>Execution Time</th>
                                    <th>Results</th>
                                </tr>
                            </thead>
