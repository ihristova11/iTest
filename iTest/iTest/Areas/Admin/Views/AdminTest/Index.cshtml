@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="dash-content">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="tests-tab" data-toggle="tab" href="#tests" role="tab" aria-controls="tests" aria-selected="true">Test List</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="results-tab" data-toggle="tab" href="#results" role="tab" aria-controls="results" aria-selected="false">Test Results</a>
        </li>
        <a asp-area="Admin" asp-controller="AdminTest" asp-action="Create" method="get" class="btn btn-success pull-right">New Test</a>
    </ul>

    <div id="myTabContent">
        <div class="tab-pane fade show active" id="tests" role="tabpanel" aria-labelledby="tests-tab">
            <table style="width:100%" class="created-tests-table dashboard-table display table table-striped custab" data-page-length='10'>
                <thead>
                <tr>
                    <th>Test Name</th>
                    <th>Category</th>
                    <th>Status</th>
                    <th class="text-center">Action</th>
                </tr>
                </thead>
                <tr>
                    <td>Name</td>
                    <td>Category</td>

                </tr>
            </table>
        </div>

        <div class="tab-pane fade" id="results" role="tabpanel" aria-labelledby="results-tab">
            Results
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.js"></script>
    <script src="~/js/dashboard-async-operations.js"></script>
    <script src="~/js/datatables-include.js"></script>
}